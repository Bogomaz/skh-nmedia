<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.fragments.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed">
        <argument
            android:name="postId"
            app:argType="integer" />
        <action
            android:id="@+id/action_feedFragment_to_editPostFragment"
            app:destination="@id/editPostFragment"/>
        <action
            android:id="@+id/action_feedFragment_to_readPostFragment"
            app:destination="@id/readPostFragment"/>
    </fragment>

    <fragment
        android:id="@+id/editPostFragment"
        android:name="ru.netology.nmedia.fragments.EditPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_edit_post">
        <argument
            android:name="postText"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/readPostFragment"
        android:name="ru.netology.nmedia.fragments.ReadPostFragment"
        android:label="fragment_read_post"
        tools:layout="@layout/fragment_read_post">
        <argument
            android:name="postId"
            app:argType="integer" />
        <action
            android:id="@+id/action_readPostFragment_to_feedFragment"
            app:destination="@id/feedFragment"/>
        <action
            android:id="@+id/action_readPostFragment_to_EditPostFragment"
            app:destination="@id/editPostFragment">
        </action>
    </fragment>
</navigation>